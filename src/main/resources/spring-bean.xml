<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="initService" class="com.spring.service.InitService">
    </bean>

    <bean id="groupDao" class="com.spring.dao.GroupDao">
        <property name="session" ref="sessionFactory"></property>
    </bean>
    <bean id="groupService" class="com.spring.service.GroupService">
        <property name="groupDao" ref="groupDao"></property>
    </bean>

    <bean id="shadeDao" class="com.spring.dao.ShadeDao">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>
    <bean id="shadeService" class="com.spring.service.ShadesService">
        <property name="shadeDao" ref="shadeDao"></property>
    </bean>
</beans>