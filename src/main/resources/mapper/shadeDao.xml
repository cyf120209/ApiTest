<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.dao.IShadeDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="queryById" resultType="com.spring.bean.Shade" parameterType="int">
        <!-- 具体的sql -->
        SELECT
        shadeId,
        name,
        number
        FROM
        book
        WHERE
        shadeId = #{shadeId}
    </select>

    <select id="queryAll" resultType="com.spring.bean.Shade">
        SELECT
        *
        FROM
        shade
        ORDER BY
        shadeId
        LIMIT #{offset}, #{limit}
    </select>

    <update id="reduceNumber">
        UPDATE shade
        SET number = number - 1
        WHERE
        book_id = #{bookId}
        AND number > 0
    </update>
</mapper>